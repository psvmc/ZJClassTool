<Window x:Class="ZJClassTool.Wins.ToolbarRightWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZJClassTool"
        xmlns:utils="clr-namespace:ZJClassTool.Utils"
        xmlns:views="clr-namespace:ZJClassTool.Views"
        mc:Ignorable="d"
         Title="ToolbarLeft" Height="50" Width="30"  ShowInTaskbar="False"
        AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Grid>
        <views:ZJClippingBorder
           CornerRadius="4 0 0 4"
           BorderBrush="#ddd" BorderThickness="1" ClipToBounds="True" Background="White">

            <Button x:Name="bar" BorderThickness="0" Click="bar_Click" Background="Transparent">
                <Image Source="/Images/Toolbar/toolbar_right.png" Width="8"></Image>
            </Button>
        </views:ZJClippingBorder>
    </Grid>
</Window>