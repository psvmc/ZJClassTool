<Window x:Class="ZJClassTool.Blackboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZJClassTool"
        mc:Ignorable="d"
        Title="Blackboard"  Opacity="1" AllowsTransparency="True" ShowInTaskbar="False" Background="Transparent" WindowStyle="None">
    <Grid Background="#043a25">
        <Canvas x:Name="blackboard_canvas"></Canvas>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="100" Foreground="White" Background="#FF252525" Click="close_button_Click"> 关闭 </Button>
        <TextBox x:Name="textbox" Height="200" VerticalAlignment="Bottom"></TextBox>
    </Grid>
</Window>
