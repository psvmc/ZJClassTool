<Window x:Class="ZJClassTool.ToolbarLeft"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZJClassTool"
        xmlns:utils="clr-namespace:ZJClassTool.Utils"
        mc:Ignorable="d"
        Title="ToolbarLeft" Height="50" Width="30"  ShowInTaskbar="False" 
        AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Grid>
        <utils:ClippingBorder
     BorderBrush="#ddd" BorderThickness="1" CornerRadius="0 4 4 0" ClipToBounds="True" Background="White">

            <Button x:Name="leftbar" BorderThickness="0" Click="leftbar_Click" Background="Transparent">
                <Image Source="/Images/Toolbar/toolbar_left.png" Width="8"></Image>
            </Button>
        </utils:ClippingBorder>
    </Grid>
</Window>
